    <section class="section categories-section">
    <div class="section-title">
      <h2>Our Curated Collections</h2>
      <p class="section-subtitle">Handpicked selections of premium pre-owned fashion items.</p>
    </div>
    <div class="categories-scroll">
      <% categories.forEach(cat => { %>
        <div class="category-card">
          <div class="category-img" style="background-image: url('<%= cat.image %>');">
            <div class="category-overlay">
              <h3 class="category-name"><%= cat.name %></h3>
              <p class="category-desc">Explore premium <%= cat.name %></p>
