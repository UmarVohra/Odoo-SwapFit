    <section class="section products-section">
    <div class="section-title">
      <h2>New Arrivals</h2>
      <p class="section-subtitle">Freshly listed items from our community of luxury sellers</p>
    </div>
    <div class="products-container">
      <% products.forEach(item => { %>
        <div class="product-card">
          <div class="product-image-container">
            <img src="<%= item.image %>" alt="<%= item.item_name %>" class="product-img">
            <span class="product-badge">Just In</span>
            <div class="product-actions">
              <button class="add-to-cart-btn">Add to Cart</button>
            </div>
          </div>
          <div class="product-info">
            <h3 class="product-title"><%= item.item_name %></h3>
            <p class="product-description"><%= item.item_description.substring(0, 80) %>...</p>
            <div class="product-price-container">
              <div>
                <span class="product-price"><%= item.points %> pts</span>
              </div>
              <button class="wishlist-btn"><i class="far fa-heart"></i></button>
            </div>
            <div class="product-meta">
              <span>Condition: <%= item.rating >= 4 ? 'Excellent' : 'Good' %></span>
              <span>Listed On: <%= item.created_at.toDateString() %></span>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </section>

    
